<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesisit.flippino" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".FlippinoStart"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tlh_story_p2"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tlh_story_p2"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".tlh_story_p2_"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tlh_story_p2_"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ndk_story_p3"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_ndk_story_p3"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".tlh_story_p3"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tlh_story_p3"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".bmng_story_p3"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_bmng_story_p3"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ndk_story_p2"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_ndk_story_p2"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
