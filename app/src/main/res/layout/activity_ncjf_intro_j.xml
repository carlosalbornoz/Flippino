<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="lolz.flippino.ncjf_intro_j">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#c3e5f5">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView30"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="235dp"
                android:layout_marginStart="235dp"
                android:src="@drawable/njcf_intro_boy" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView31"
                android:layout_marginLeft="87dp"
                android:layout_marginStart="87dp"
                android:src="@drawable/njcf_jj"
                android:layout_below="@+id/imageView32"
                android:layout_toRightOf="@+id/imageView30"
                android:layout_toEndOf="@+id/imageView30" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView32"
                android:src="@drawable/njcf_intro_jose"
                android:layout_alignTop="@+id/imageView30"
                android:layout_alignLeft="@+id/imageView31"
                android:layout_alignStart="@+id/imageView31" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton93"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:src="@drawable/global_exit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton94"
                android:src="@drawable/global_lessonlabel"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_alignLeft="@+id/imageView30"
                android:layout_alignStart="@+id/imageView30" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton95"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView31"
                android:background="@null"
                android:layout_alignEnd="@+id/imageView31"
                android:src="@drawable/global_stars" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton96"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_toRightOf="@+id/imageView32"
                android:layout_toEndOf="@+id/imageView32"
                android:src="@drawable/global_sound" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton97"
                android:src="@drawable/global_help"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_toRightOf="@+id/imageButton96"
                android:layout_toEndOf="@+id/imageButton96" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton98"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_toRightOf="@+id/imageButton97"
                android:layout_toEndOf="@+id/imageButton97"
                android:src="@drawable/global_home" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton99"
                android:src="@drawable/global_leftarrow"
                android:layout_below="@+id/imageView30"
                android:layout_toRightOf="@+id/imageButton93"
                android:background="@null"
                android:layout_toEndOf="@+id/imageButton93" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton100"
                android:src="@drawable/global_rightarrow"
                android:layout_below="@+id/imageView30"
                android:background="@null"
                android:layout_alignLeft="@+id/imageButton98"
                android:layout_alignStart="@+id/imageButton98" />
        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
