<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#c3e5f5"
    tools:context="lolz.flippino.ndk_story_p1">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:src="@drawable/global_exit" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView64"
                android:src="@drawable/ndkclouds"
                android:layout_below="@+id/imageView59"
                android:layout_alignEnd="@+id/imageButton169"
                android:layout_toEndOf="@+id/imageButton" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView61"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ndkland" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView66"
                android:src="@drawable/ndknenap3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="650dp"
                android:layout_height="650dp"
                android:id="@+id/imageView67"
                android:scaleType="fitXY"
                android:src="@drawable/ndkstorep3"
                android:layout_below="@+id/imageButton3"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView59"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageButton"
                android:layout_marginStart="87dp"
                android:src="@drawable/global_lessonlabel" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:background="@null"
                android:src="@drawable/global_stars"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/imageButton3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:background="@null"
                android:src="@drawable/global_sound"
                android:layout_alignBottom="@+id/imageButton"
                android:layout_toStartOf="@+id/imageButton122" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton122"
                android:background="@null"
                android:src="@drawable/global_help"
                android:layout_alignTop="@+id/imageButton3"
                android:layout_toStartOf="@+id/imageButton169" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton169"
                android:background="@null"
                android:src="@drawable/global_home"
                android:layout_alignBottom="@+id/imageButton2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="65dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton172"
                android:src="@drawable/global_leftarrow"
                android:background="@null"
                android:layout_alignBottom="@+id/imageView67"
                android:layout_alignStart="@+id/imageView64" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton173"
                android:src="@drawable/global_rightarrow"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageButton122" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tara na, bili na ng niyog at durian kay Aling Nena dahil mapapangita ka sa sarap!"
                android:id="@+id/textView8"
                android:layout_alignBottom="@+id/imageButton172"
                android:layout_centerHorizontal="true"
                android:textSize="30dp" />


        </RelativeLayout>
    </FrameLayout>

</FrameLayout>