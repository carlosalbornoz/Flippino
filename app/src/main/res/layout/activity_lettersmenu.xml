<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#c3e5f5"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <ImageButton
                android:layout_width="375"
                android:layout_height="350"
                android:id="@+id/imageButton20"
                android:src="@drawable/patinig"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageButton22"
                android:layout_alignStart="@+id/imageButton22" />

            <ImageButton
                android:layout_width="350"
                android:layout_height="350"
                android:id="@+id/imageButton21"
                android:scaleType="fitXY"
                android:background="@null"
                android:src="@drawable/katinig"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageButton20"
                android:layout_toStartOf="@+id/imageButton20" />

            <ImageButton
                android:layout_width="400"
                android:layout_height="350"
                android:id="@+id/imageButton22"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/alpabeto"
                android:layout_below="@+id/imageButton20"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="350"
                android:layout_height="350"
                android:id="@+id/imageButton23"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/hnl"
                android:layout_alignTop="@+id/imageButton21"
                android:layout_toRightOf="@+id/imageButton22"
                android:layout_toEndOf="@+id/imageButton22" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/global_label"
            android:src="@drawable/global_label"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/global_exit"
            android:src="@drawable/global_exit" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/global_stars"
            android:src="@drawable/global_stars"
            android:layout_toStartOf="@+id/global_sound" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/global_sound"
            android:src="@drawable/global_sound"
            android:layout_toStartOf="@+id/global_help" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:background="@null"
            android:id="@+id/global_help"
            android:src="@drawable/global_help"
            android:layout_toStartOf="@+id/global_home" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/global_home"
            android:src="@drawable/global_home"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
