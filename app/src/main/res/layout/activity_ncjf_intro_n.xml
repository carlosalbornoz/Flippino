<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#c3e5f5"
    tools:context="lolz.flippino.ncjf_intro_n">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView19"
                android:src="@drawable/njcf_girl"
                android:layout_marginBottom="62dp"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageButton59"
                android:layout_toEndOf="@+id/imageButton59"
                android:layout_marginLeft="71dp"
                android:layout_marginStart="71dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView21"
                android:src="@drawable/njcf_intro_nina"
                android:layout_marginLeft="65dp"
                android:background="@null"
                android:layout_marginStart="65dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView19"
                android:layout_toEndOf="@+id/imageView19"
                android:layout_marginTop="139dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton59"
                android:src="@drawable/global_leftarrow"
                android:background="@null"
                android:layout_marginLeft="65dp"
                android:layout_marginStart="65dp"
                android:layout_alignBottom="@+id/imageView19"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="450"
                android:layout_height="700"
                android:id="@+id/imageView20"
                android:scaleType="fitXY"
                android:src="@drawable/njcf_ene"
                android:layout_below="@+id/imageView21"
                android:layout_toRightOf="@+id/imageView19"
                android:layout_toEndOf="@+id/imageView19" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton60"
                android:src="@drawable/global_rightarrow"
                android:layout_alignTop="@+id/imageButton59"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="99dp"
                android:layout_marginEnd="99dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton61"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@null"
                android:src="@drawable/global_exit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton62"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton59"
                android:layout_toEndOf="@+id/imageButton59"
                android:background="@null"
                android:src="@drawable/global_lessonlabel" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton63"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView21"
                android:layout_alignEnd="@+id/imageView21"
                android:background="@null"
                android:src="@drawable/global_stars" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton64"
                android:src="@drawable/global_sound"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_toRightOf="@+id/imageButton63"
                android:layout_toEndOf="@+id/imageButton63" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton65"
                android:src="@drawable/global_help"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_toRightOf="@+id/imageButton64"
                android:layout_toEndOf="@+id/imageButton64" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton66"
                android:background="@null"
                android:src="@drawable/global_home"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageButton60"
                android:layout_alignEnd="@+id/imageButton60" />

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
