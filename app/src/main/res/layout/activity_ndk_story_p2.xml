<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#c3e5f5"
    tools:context="com.thesisit.flippino.ndk_story_p2">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView75"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/ndkland"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView76"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ndk_nena_p2"
                android:layout_marginStart="244dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="700dp"
                android:layout_height="700dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView77"
                android:src="@drawable/ndkstorep2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="118dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton163"
                android:layout_marginRight="286dp"
                android:background="@null"
                android:layout_marginEnd="286dp"
                android:src="@drawable/global_stars"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton164"
                android:src="@drawable/global_sound"
                android:background="@null"
                android:layout_marginLeft="144dp"
                android:layout_marginStart="144dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageButton163"
                android:layout_alignStart="@+id/imageButton163" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton166"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton164"
                android:layout_toEndOf="@+id/imageButton164" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton165"
                android:background="@null"
                android:src="@drawable/global_help"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton166"
                android:layout_toEndOf="@+id/imageButton166" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton167"
                android:background="@null"
                android:src="@drawable/global_home"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton165"
                android:layout_toEndOf="@+id/imageButton165" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton162"
                android:background="@null"
                android:src="@drawable/global_exit"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton103"
                android:background="@null"
                android:src="@drawable/global_leftarrow"
                android:layout_alignTop="@+id/imageButton168"
                android:layout_toRightOf="@+id/imageButton162"
                android:layout_toEndOf="@+id/imageButton162" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton168"
                android:background="@null"
                android:src="@drawable/global_rightarrow"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageButton167"
                android:layout_alignEnd="@+id/imageButton167" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView55"
                android:layout_below="@+id/imageButton166"
                android:layout_toRightOf="@+id/imageButton103"
                android:layout_toEndOf="@+id/imageButton103"
                android:src="@drawable/global_lessonlabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tara na, bili na ng niyog at durian kay Aling Nena dahil mapapangiti ka sa sarap!"
                android:id="@+id/textView12"
                android:textSize="46dp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/imageButton165" />

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
